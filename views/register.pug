doctype html
html.html_register
link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css' rel='stylesheet')
script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')

head
	title Login Page
	
	link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
	link(rel='stylesheet', href='/stylesheets/login.css')
body.body_register
		.container
			.d-flex.justify-content-center.h-100
				.card_register
					.card-header
						h3 Registration
					.card-body.pb-5
						form(action="/register" method="post")
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='text' placeholder='First Name' name="firstname")
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='text' placeholder='Last Name' name="lastname")
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='email' placeholder='Email' name="email")        
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='number' placeholder='Age' name="age")
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='text' placeholder='Country' name="country")
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='text' placeholder='City' name="city")        
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-key
								input.form-control(type='password' placeholder='password' name="passw")
							.form-group
								input.btn.float-right.login_btn(type='submit' value='Register')
								a.btn.float-left.login_btn(href="/") Back
					.card-footer
						.d-flex.justify-content-center.links
							| Do you have an account?
							a(href='/login') Sign In